<h1>Listing Publications</h1>

<% @publications.each do |publication| %>
  <p>
    <strong>Title: </strong><%= publication.title %><br>
    <strong>Link: </strong><%= publication.link %><br>
    <%= link_to 'View Detail', publication %>
    <% if user_signed_in? && current_user.role == "admin"%>
      | <%= link_to 'Edit', edit_publication_path(publication) %> |
      <%= link_to 'Destroy', publication, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </p>
<% end %>


<br>

<% if user_signed_in? && current_user.role == "admin" %>
  <p><%= link_to 'New Publication', new_publication_path %></p>
<% end %> 

<%= link_to 'Back to Main Page', projects_path %>
<% if user_signed_in? && current_user.role == "admin"%>
  | <%= link_to 'Back to Admin Page', admins_path %>  
<% end %>
