
<div id="report-index" class="center-eighty">

  <div class="center">
    <h1>All News Reports</h1><br><br>
  </div>

  <% @reports.each do |report| %>
    <p>
      <strong>Headline: </strong><%= report.headline %><br>
      <strong>Content: </strong><%= report.content %><br>
      <% if user_signed_in? && current_user.role == "admin" %>
        <%= link_to 'Edit', edit_report_path(report) %> | 
        <%= link_to 'Delete', report, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>

      
    </p>
  <% end %>

  <br>
  <div class="center">
    <%= link_to 'Back to Main Page', projects_path %>
    <% if user_signed_in? && current_user.role == "admin" %>
      | <%= link_to 'Back to Admin Page', admins_path %>  
    <% end %>
  </div>
</div>