<h1>Currently Involved Researchers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= link_to 'View Bio', person %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_person_path(person) %></td>
          <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<% if user_signed_in? %>
  <p><%= link_to 'New Person', new_person_path %></p><br>
<% end %>


<%= link_to 'Back to Main Page', root_path %>
<% if user_signed_in? %>
  | <%= link_to 'Back to Admin Panel', admins_path %>
<% end %>






